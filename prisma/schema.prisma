// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                    String         @id @default(uuid())
  name                  String
  createdAt             DateTime       @default(now()) @map("created_at")
  updatedAt             DateTime       @default(now()) @map("updated_at")
  email                 String
  phone                 String
  password              String
  ownedProjects         Project[]      @relation("creator")
  participatingProjects Project[]      @relation("members")
  userTransactions      Transactions[]

  @@map("users")
}

model Project {
  id        String @id @default(uuid())
  creatorId String @map("creator_id")
  creator   User   @relation(fields: [creatorId], references: [id], "creator")
  members   User[] @relation("members")
  files     File[] @relation("project")

  @@map("projects")
}

model File {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")
  projectId String   @map("project_id")
  project   Project  @relation(fields: [projectId], references: [id], "project")
  url       String

  @@map("files")
}

model Transactions {
  id     String @id @default(uuid())
  user   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id")
}
